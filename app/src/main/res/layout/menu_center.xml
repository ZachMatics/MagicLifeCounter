<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_menu_center"
    android:layout_width="310dp"
    android:layout_height="160dp"
    android:layout_centerInParent="true"
    android:animateLayoutChanges="true"
    android:background="@drawable/layout_menu_center"
    android:rotation="0"
    >

    <ImageButton
        android:id="@+id/image_button_reset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_top_default_menu_button_theme"
        android:scaleType="fitXY"
        android:src="@drawable/reset" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="103.33dp"
        android:layout_height="80dp"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/image_button_numbers"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/image_button_reset"
        android:layout_toRightOf="@id/image_button_reset"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_top_default_menu_button_theme"
        android:scaleType="fitXY"
        android:src="@drawable/numbers" />

    <Button
        android:id="@+id/button_numbers"
        android:layout_width="103.33dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/button_reset"
        android:layout_toRightOf="@+id/button_reset"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/image_button_name"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/image_button_numbers"
        android:layout_toRightOf="@+id/image_button_numbers"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_top_default_menu_button_theme"
        android:scaleType="fitXY"
        android:src="@drawable/picture" />

    <Button
        android:id="@+id/button_name"
        android:layout_width="103.33dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/button_numbers"
        android:layout_toRightOf="@+id/button_numbers"
        android:background="#00000000" />


    <ImageButton
        android:id="@+id/image_button_history"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/image_button_reset"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_top_default_menu_button_theme"
        android:scaleType="fitXY"
        android:src="@drawable/history" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="103.33dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button_reset"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/image_button_dice"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_below="@id/image_button_reset"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/image_button_history"
        android:layout_toRightOf="@+id/image_button_history"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_top_default_menu_button_theme"
        android:scaleType="fitXY"
        android:src="@drawable/diceicon" />

    <Button
        android:id="@+id/button_dice"
        android:layout_width="103.33dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button_numbers"
        android:layout_toEndOf="@+id/button_history"
        android:layout_toRightOf="@+id/button_history"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/image_button_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/image_button_reset"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/image_button_dice"
        android:layout_toRightOf="@+id/image_button_dice"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_top_default_menu_button_theme"
        android:scaleType="fitXY"
        android:src="@drawable/settings" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="103.33dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button_numbers"
        android:layout_toEndOf="@+id/button_dice"
        android:layout_toRightOf="@+id/button_dice"
        android:background="#00000000" />

</RelativeLayout>