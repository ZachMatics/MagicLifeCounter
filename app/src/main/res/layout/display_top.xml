<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_top"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="2dp"
    android:layout_weight="2"
    android:background="@drawable/gradient_default_bottom"
    android:orientation="vertical"
    android:rotation="180">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_top_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-10"
            android:shadowDy="-10"
            android:shadowRadius="10"
            android:textColor="@color/font_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_top_player_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-10"
            android:shadowDy="-10"
            android:shadowRadius="10"
            android:textColor="@color/font_light"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#00000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_minus_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#00000000"
            android:onClick="scoreUpdate"
            android:rotation="0"
            android:shadowColor="@color/text_shadow"
            android:layout_gravity="center"
            android:shadowDx="-10"
            android:shadowDy="-10"
            android:shadowRadius="10"
            android:text="@string/symbol_minus"
            android:textColor="@color/font_light"
            android:textSize="70sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/text_number_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"

            android:rotation="0"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-10"
            android:shadowDy="-10"
            android:shadowRadius="10"
            android:text="@string/text_initial_count"
            android:textColor="@color/font_light"
            android:layout_gravity="center"
            android:textSize="125sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_plus_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="scoreUpdate"
            android:rotation="0"
            android:shadowColor="@color/text_shadow"

            android:shadowDx="-10"
            android:shadowDy="-10"
            android:shadowRadius="10"
            android:text="@string/symbol_plus"
            android:textColor="@color/font_light"
            android:textSize="70sp"
            android:visibility="visible" />


    </LinearLayout>


    <ImageButton
        android:id="@+id/button_clear_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#00000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout_poison_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_poison_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="0"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-5"
            android:shadowDy="-5"
            android:shadowRadius="10"
            android:text="@string/text_initial_poison_count"
            android:textColor="@color/font_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <SeekBar
            android:id="@+id/seekbar_poison_top"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxHeight="4dp"
            android:progressDrawable="@drawable/seekbar_progress"
            android:rotation="0"
            android:thumb="@drawable/thumb_seekbar"
            android:visibility="visible" />


    </LinearLayout>


    <Button
        android:id="@+id/button_top_player_turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/layout_menu_center"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-10"
        android:shadowDy="-10"
        android:shadowRadius="10"
        android:text="Start Match"
        android:textSize="50sp" />

</LinearLayout>